<% provide(:checkout, "active")%>

<div class="main" >  
  <div class ="container">  
    <div class = "col-md-6">

      <h1>Enter Your Data</h1>

      <div class="row">
        <div class="col-md-6">
          <%= form_for :user, action:"/checkouts", method:"post" do |f| %>
          <%= f.label :name %><br>
          <%= f.text_field :name %><br><br>

          <%= f.label :email %><br>
          <%= f.email_field :email %><br><br>

          <%= f.label :number %><br>
          <%= f.text_field :number %><br><br>

          <%= f.label :address %><br>
          <%= f.text_field :address %><br><br>

          <%= f.label :country %><br>
          <%= f.text_field :country %><br><br>

          <%= f.label :city %><br>
          <%= f.text_field :city %><br><br>

          <%= f.submit "Submit", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




